<UserControl x:Class="FitnessManagerWPF.View.UserControl.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessManagerWPF.View.UserControl"
             xmlns:helper="clr-namespace:FitnessManagerWPF.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Full name -->
        <Border Grid.Row="1" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="300">
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Full Name"  Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" BorderThickness="0" Width="280" Margin="5" FontSize="16"/>
        </Border>
        
        <!-- Username -->
        <Border Grid.Row="3" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="300">
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Username" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" BorderThickness="0" Width="280" Margin="5" FontSize="16"/>
        </Border>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding UsernameValidationError}" Foreground="Red" Width="280"/>
        
        <!-- Password -->
        <Border Grid.Row="5" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="300">
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Password" helper:PasswordBoxHelper.ActualPassword="{Binding Password, UpdateSourceTrigger=PropertyChanged}" helper:PasswordBoxHelper.PasswordChar="True" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" BorderThickness="0" Width="280" Margin="5" FontSize="16"/>
        </Border>
        <Border Grid.Row="7" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="300">
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" helper:PasswordBoxHelper.PasswordChar="True" Tag="Password" helper:PasswordBoxHelper.ActualPassword="{Binding PasswordCompare, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" BorderThickness="0" Width="280" Margin="5" FontSize="16"/>
        </Border>
        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding PasswordValidationError}" Foreground="Red" Width="280"/>
        <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding PasswordValidationCompareError}" Foreground="Red" Width="280"/>
        
        <!-- Email -->
        <Border Grid.Row="9" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="300">
            <TextBox Style="{StaticResource PlaceholderTextBoxStyle}" Tag="E-mail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" BorderThickness="0" Width="280" Margin="5" FontSize="16"/>
        </Border>
        <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding EmailValidationError}" Foreground="Red" Width="280"/>
        
        <!-- Buttons -->
        <Border Grid.Row="11" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="100" Background="LightSlateGray" Margin="0 0 110 0">
            <Button Command="{Binding CreateUserCommand}" Content="Create User" Grid.Row="5" Grid.Column="1" Style="{StaticResource FlatButton}" BorderThickness="0" Width="100" Background="Transparent" FontWeight="SemiBold" FontSize="14" IsDefault="True"/>
        </Border>
        <Border Grid.Row="11" Grid.Column="1" CornerRadius="8" BorderThickness="1" BorderBrush="Black" Width="100" Background="DimGray" Margin="110 0 0 0">
            <Button Command="{Binding ShowLoginCommand}" Content="Return" Grid.Row="5" Grid.Column="1" Style="{StaticResource FlatButton}" BorderThickness="0" Width="100" Background="Transparent" FontWeight="SemiBold" FontSize="14" IsCancel="True"/>
        </Border>
    </Grid>
</UserControl>
