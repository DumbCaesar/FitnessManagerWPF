<UserControl x:Class="FitnessManagerWPF.View.UserControl.User.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessManagerWPF.View.UserControl.User"
             xmlns:helper="clr-namespace:FitnessManagerWPF.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <!-- Header -->
                <TextBlock Text="My Profile" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding DateJoined, StringFormat='Member since {0:MMMM dd, yyyy}'}" FontSize="13" Foreground="#2C3E50" Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Account Information -->
                    <Border Grid.Column="0" Background="White" Padding="25" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="12">
                        <StackPanel>
                            <TextBlock Text="Account Information" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

                            <!-- Membership Status -->
                            <Border Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Current Status" FontSize="11" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding MembershipTypeDisplay}" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding MembershipExpiresDisplay}" FontSize="13" Foreground="#2C3E50"/>
                                </StackPanel>
                            </Border>

                            <!-- Name -->
                            <TextBlock Text="Name" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1" CornerRadius="8">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>
                            <TextBlock Text="{Binding NameValidationError}" FontSize="12" Foreground="Red" Margin="0,0,0,6"/>

                            <!-- Email -->
                            <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1" CornerRadius="8">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>
                            <TextBlock Text="{Binding EmailValidationError}" FontSize="12" Foreground="Red" Margin="0,0,0,6"/>


                            <!-- Username -->
                            <TextBlock Text="Username" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,0">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>
                            <TextBlock Text="{Binding UsernameValidationError}" FontSize="12" Foreground="Red" Margin="0 2 0 25"/>
                         
                            <!-- Password Section -->
                            <TextBlock Text="Change Password" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                            <!-- Current Password -->
                            <TextBlock Text="Current Password" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" helper:PasswordBoxHelper.PasswordChar="True" helper:PasswordBoxHelper.ActualPassword="{Binding Password, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>

                            <!-- New Password -->
                            <TextBlock Text="New Password" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" helper:PasswordBoxHelper.PasswordChar="True" helper:PasswordBoxHelper.ActualPassword="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>

                            <!-- Confirm New Password -->
                            <TextBlock Text="Confirm New Password" FontSize="12" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,6"/>
                            <Border BorderBrush="#E0E0E0" Background="White" BorderThickness="1"  CornerRadius="8" Margin="0,0,0,20">
                                <TextBox Padding="12,10" BorderThickness="0" Background="Transparent" helper:PasswordBoxHelper.PasswordChar="True" helper:PasswordBoxHelper.ActualPassword="{Binding NewPasswordCompare, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                            </Border>

                            <!-- Buttons -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Height="42" Content="Save Changes" Command="{Binding SaveCommand}" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#FF8C42"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FF7A28"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Column="2" Height="42" Content="Discard" Command="{Binding DiscardCommand}" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="Foreground" Value="#2C3E50"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                            <TextBlock Text="{Binding PasswordValidationError}" FontSize="12" Foreground="Red"/>
                        </StackPanel>
                    </Border>

                    <!-- Billing History -->
                    <Border Grid.Column="2" Background="White" Padding="25" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="12">
                        <StackPanel>
                            <TextBlock Text="Billing History" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>
                            <ScrollViewer MaxHeight="500" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding UserSubscriptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="WhiteSmoke" Padding="15" CornerRadius="5" Margin="0,0,5,5">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Text="{Binding Membership.Name}"  FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding DateDisplay}" FontSize="12" Foreground="#2C3E50" Margin="0,4,0,0"/>
                                                    <TextBlock Grid.Row="2" Text="{Binding AmountDisplay}" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,6,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>