<Window x:Class="FitnessManagerWPF.View.Admin.AddMemberView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessManagerWPF.View.Admin"
        mc:Ignorable="d"
        Title="Create User" Height="240" Width="420">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,4,0,8" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,4,0,8" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Username:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="0,4,0,8" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="0,4,0,8" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="Cancel" Width="80" Height="28" Margin="0,0,8,0"
            Command="{Binding CancelCommand}"
            IsCancel="True"/>
            <Button Content="Create User" Width="100" Height="28" Background="#5CB85C" Foreground="White"
            Command="{Binding CreateUserCommand}"
            IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
