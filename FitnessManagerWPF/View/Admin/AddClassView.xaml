<Window x:Class="FitnessManagerWPF.View.Admin.AddClassView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessManagerWPF.View.Admin"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Class Creation" Height="300" Width="420">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Class name -->
        <TextBlock Text="Class name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,4,0,8" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Max pariticpants -->
        <TextBlock Text="Max participants:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,4,0,8" Text="{Binding MaxParticipants, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Trainer -->
        <TextBlock Text="Trainer:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,4,0,8" ItemsSource="{Binding TrainerList}" SelectedItem="{Binding Trainer}" DisplayMemberPath="Name"/>

        <!-- Day -->
        <TextBlock Text="Day:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Margin="0,4,0,8" ItemsSource="{Binding DaysOfWeek}" SelectedItem="{Binding Day}"/>

        <!-- Time -->
        <TextBlock Text="Time:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,4,0,8" ItemsSource="{Binding TimeSlots}" SelectedItem="{Binding Time}" ItemStringFormat="{}{0:hh}:{0:mm}"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="Cancel" Width="80" Height="28" Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"/>
            <Button Content="Create Class" Width="100" Height="28" Background="#5CB85C" Foreground="White"
                    Command="{Binding SaveClassCommand}"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
