<Window x:Class="FitnessManagerWPF.View.Admin.SelectedClassView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessManagerWPF.View.Admin"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="SelectedClassView" Height="450" Width="590">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" ItemsSource="{Binding ListOfClasses}" SelectedItem="{Binding SelectedClass}" DisplayMemberPath="ClassInfo"/>
        <ListView Grid.Row="1" ItemsSource="{Binding ListOfUsers}" SelectedItem="{Binding SelectedMember}">
            <ListView.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource HorizontalCleanScrollBar}" />
            </ListView.Resources>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding MemberDoubleClickCommand}" CommandParameter="{Binding SelectedMember}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="70"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="180"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                    <GridViewColumn Header="Membership" DisplayMemberBinding="{Binding MembershipStatusDisplay}" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
