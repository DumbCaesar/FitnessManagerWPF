<Application x:Class="FitnessManagerWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FitnessManagerWPF">
    <Application.Resources>
        <!-- No Button Style Outline -->
        <Style x:Key="FlatButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
        
        <!-- Side bar menu items for admin panel -->
        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 2 0 2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="R">
                            <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                                <Border x:Name="Indicator" Grid.Column="0" Visibility="Collapsed" Background="#0284C7" Height="45"/>
                                <TextBlock Grid.Column="1"
                                       x:Name="textBlock"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       FontSize="{TemplateBinding FontSize}"
                                       Text="{TemplateBinding Content}"/>
                        </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Background" Value="Transparent" TargetName="R"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="textBlock" Property="Margin" Value="10 0 0 0"/>
                                <Setter Property="Foreground" Value="#000" TargetName="textBlock"/>
                                <Setter Property="Background" Value="#F1F5F9" TargetName="R"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="textBlock" Property="Margin" Value="10 0 0 0"/>
                                <Setter Property="Foreground" Value="#000" TargetName="textBlock"/>
                                <Setter Property="Background" Value="#E0F2FE" TargetName="R"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Side bar menu items for Member panel -->
        <Style x:Key="MemberRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 2 0 2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="R">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Indicator" Grid.Column="0" Visibility="Collapsed" Background="#FF8C42" Height="45"/>
                                <TextBlock Grid.Column="1"
                                       x:Name="textBlock"
                                       FontWeight="SemiBold"
                                       Foreground="#000"
                                       VerticalAlignment="Center"
                                       FontSize="{TemplateBinding FontSize}"
                                       Text="{TemplateBinding Content}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="textBlock" Property="Margin" Value="10 0 0 0"/>
                                <Setter Property="Background" Value="#FFF5F0" TargetName="R"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="textBlock" Property="Foreground" Value="#000"/>
                                <Setter Property="Background" Value="#FFE9DB" TargetName="R"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox placeholder text -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <!-- Override default Template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <!-- Wrap everything in a grid so layers overlap -->
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                            <TextBlock Text="{TemplateBinding Tag}" 
                               Foreground="#AA999999"
                               Margin="5" 
                               IsHitTestVisible="False"
                               VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Opacity" Value="0.8"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <!-- When textbox is null show the placeholder -->
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern Minimal ScrollBar -->
        <Style x:Key="VerticalCleanScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="True">

                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="Transparent" BorderThickness="0"/>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Cursor="SizeNS">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#8E8E8E"
                                                CornerRadius="2"
                                                Width="6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="Transparent" BorderThickness="0"/>
                                </Track.IncreaseRepeatButton>

                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HorizontalCleanScrollBar" TargetType="ScrollBar">
            <Setter Property="Height" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track">

                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="Transparent" BorderThickness="0"/>
                                </Track.DecreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Cursor="SizeWE">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#8E8E8E"
                                                CornerRadius="2"
                                                Height="6"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="Transparent" BorderThickness="0"/>
                                </Track.IncreaseRepeatButton>

                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
